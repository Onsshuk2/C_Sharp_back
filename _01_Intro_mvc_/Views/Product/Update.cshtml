@model _01_Intro_mvc_.ViewModels.CreateProductVM

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div style="width: 40%; margin: 0 auto; border: 2px solid black; padding: 10px; border-radius: 10px;">
        <h1 style="text-align: center">Update Product</h1>

        <input type="hidden" asp-for="Product.Id" />

        <div class="mb-3">
            <label asp-for="Product.Name" class="form-label">Назва</label>
            <input type="text" class="form-control" asp-for="Product.Name" />
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Description" class="form-label">Опис</label>
            <input type="text" class="form-control" asp-for="Product.Description" />
        </div>

        <div class="mb-3">
            <label asp-for="Product.Price" class="form-label">Ціна</label>
            <input type="number" step="0.01" class="form-control" asp-for="Product.Price" />
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.Amount" class="form-label">Кількість</label>
            <input type="number" class="form-control" asp-for="Product.Amount" />
            <span asp-validation-for="Product.Amount" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Product.CategoryId" class="form-label">Категорія</label>
            <select class="form-select" asp-for="Product.CategoryId" asp-items="Model.Categories">
                <option value="">Оберіть категорію</option>
            </select>
            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Поточне зображення</label>
            <div>
                @if (!string.IsNullOrEmpty(Model.Product.Image))
                {
                    <img src="~/images/products/@Model.Product.Image" alt="Зображення товару" style="max-width: 200px;" />
                }
                else
                {
                    <p>Зображення відсутнє</p>
                }
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="File" class="form-label">Оновити зображення</label>
            <input type="file" class="form-control" asp-for="File" accept="image/*" />
        </div>

        <div class="mb-3 d-flex">
            <button type="submit" class="btn btn-success flex-grow-1 mx-1">Оновити</button>
            <a asp-action="Index" class="btn btn-dark flex-grow-1 mx-1">Назад</a>
        </div>
    </div>
</form>
